                            <li class="menu__item"><a class="header__item header__item--hover {{ 'header__item--active' if page.fileSlug === 'kontakt' }}" href="/kontakt/">Kontakt</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        
            <div class="glide">
                <div class="glide__track" data-glide-el="track">
                    <ul class="glide__slides">
                        <li class="glide__slide"><img class="header__foto" src="{{ foto1 }}" alt="{{ alt }}"></li>
                        <li class="glide__slide"><img class="header__foto" src="{{ foto2 }}" alt="{{ alt }}"></li>
                        <li class="glide__slide"><img class="header__foto" src="{{ foto3 }}" alt="{{ alt }}"></li>
                    </ul>
                </div>
        
                <script src="/JS/glide.min.js"></script>
        
                <script>
                    new Glide('.glide',{
                        type:'carousel',
                        startAt: 0,
                        perView: 1,
                        autoplay: 10000,
                        gap: 0,
                        hoverpause: true,
                        keyboard: true,
                        animationTimingFunc: "ease-in-out",
                        animationDuration: 2000,
                        rewindDuration: 5000
                    }).mount()
                </script>
            </div>
                
            <div class="header__title">
                <div class="header__background">
                    <h1 class="header__nadpis"> {{ perex1 }} </h1>
                    <h2 class="header__H2"> {{ perex2 }} </h2>
                </div>
            </div>
        
            <a class="odkaz odkaz__1" href="{{ odkaz1 }}">
                <img class="odkaz__ikona" src="{{ icon1 }}" alt="{{ alt1 }}">
                <p class="odkaz__popis"> {{ text1 }} </p>
            </a>
        
            <a class="odkaz odkaz__2" href="{{ odkaz2 }}">
